{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "target": "es6",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "types": [
      "jest",
      "node",
      "prop-types",
      "react",
      "react-dom"
    ],
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ]
}
